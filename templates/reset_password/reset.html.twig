{% extends 'base.html.twig' %}
{% block title %}Reset your password{% endblock %}

{% block body %}<br>
    <br>
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-md-6">
                <h1>Reset your password</h1>
                <hr>
                {{ form_start(resetForm) }}
