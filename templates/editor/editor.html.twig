{% extends 'base.html.twig' %}

{% block title %}Editor Page{% endblock %}

{% block body %}
    <style>
        /* Your existing styles here */
    </style>

    <div class="container-fluid">
        <div class="row">
            <!-- Kenar Çubuğu -->
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
                {% include 'sidebar_template.twig' %}
            </nav>

            <!-- Ana İçerik -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">

                <div class="vh-100 vw-80"><br> <br>
                    <br>
                    <br>
                    <br>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="col-md-6">
                            <h1 class=" text-center pb-12">Editor Page</h1>
                        </div>
                        <div class="col-md-2">
                            <select id="news-filter" class="form-select" onchange="location = this.value;">
                                <option value="{{ path('app_editor') }}">Editorial</option>
                                <option value="{{ path('app_profile') }}">My News</option>
                            </select>
                        </div>
                    </div>
                    <hr>
                    <div class="mb-3 text-center">
                        <div class="row">
                            <div class="col-md-8"
                                 style="padding-right: initial; max-height: 800px; overflow: hidden; background-color: #f8f7f7">
                                <div>
                                    <div class="row">
                                        <div class="col-md-2">
                                            <a href="{{ path('editor_review') }}" class="btn btn-outline-primary">
                                                <i class="bi bi-credit-card-2-front"
                                                   style="font-size: 50px">Take</i>
                                            </a>
                                        </div>
                                        <div class="col-md-2">
                                            <a href="{{ path('app_check') }}" class="btn btn-outline-primary">
                                                <i class="bi bi-pencil-square" style="font-size: 50px">Check</i>
                                            </a>
                                        </div>
                                        <div class="col-md-2" style="margin-right: 20px;">
                                            <a href="{{ path('app_published') }}" class="btn btn-outline-primary">
                                                <i class="bi bi-peoplebi bi-check2-circle" style="font-size: 50px">Publish</i>
                                            </a>
                                        </div>
                                        <div class="col-md-2">
                                            <a href="{{ path('app_denied') }}" class="btn btn-outline-primary">
                                                <i class="bi bi-x-circle" style="font-size: 50px">Denied</i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
{% endblock %}
