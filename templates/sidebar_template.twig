{% block body %}
    <!-- Bootstrap core CSS -->
    <style>
        .sidebar {
            font-size: large;
            padding-left: unset;
            height: 100vh;
            width: 250px;
            position: sticky;
            top: 0;
            left: 0;
            background-color: #212529FF;
            color: #fff;
            padding-top: 20px;
        }

        .sidebar h4 {
            color: #fff;
            padding-left: 20px;
        }

        .sidebar ul {
            list-style-type: none;
            padding: 0;
        }

        .sidebar ul li {
            margin-bottom: 10px;
        }

        .sidebar a {
            text-decoration: none;
            color: #fff;
            display: block;
            padding: 10px 20px;
        }

        .sidebar a:hover {
            background-color: #444;
        }

        .content {
            margin-left: 250px;
            padding: 20px;
        }
    </style>

    <div class="container-fluid">
        <div class="row">
            <!-- Kenar Çubuğu -->
            <nav class="sidebar"><br>
                <br>
                <br>
                <h4>Editor</h4>

                <hr>

                <ul>

                    <li><a href="{{ path('editor_review') }}"><i class="bi bi-credit-card-2-front"></i> Assignment <span
                                    class="badge bg-blue">{{ waitingCount }}</span></a></li>

                    <li><a href="{{ path('app_check') }}"><i class="bi bi-pencil-square"></i> Check Article <span
                                    class="badge bg-warning">{{ editorReviewCount }}</span></a></li>
                    <li><a href="{{ path('app_editrequest') }}"><i class="bi bi-usb-mini-fill"></i> Edit Requests<span
                                    class="badge bg-cyan">{{ editorRequestCount }}</span></a></li>

                    <li><a href="{{ path('app_published') }}"><i class="bi bi-people"></i> Publish
                            <span class="badge bg-success">{{ acceptedCount }}</span></a></li>

                    <li><a href="{{ path('app_denied') }}"><i class="bi bi-x-circle"></i> Denied <span
                                    class="badge bg-danger">{{ deniedCount }}</span></a></li>

                </ul>
                <div class="dropdown">
                    <a href="#"
                       class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
                       id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="{{ asset(user.profileImage ?? 'img/profilepic.png') }}" alt="" width="32" height="32"
                             class="rounded-circle me-2">
                        <strong>{{ user.name }}  {{ user.surname }}</strong>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark text-small shadow"
                        aria-labelledby="dropdownUser1">
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li><a class="dropdown-item" href="{{ path('app_profile') }}">Profile</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" href="{{ path('app_news') }}">Add News</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" href="{{ path('app_profil_edit') }}">Profile Edit</a></li>

                    </ul>
                </div>
            </nav>

            <!-- Ana İçerik -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 content">
                <!-- Ana içerik burada yer alır -->
            </main>
        </div>
    </div>
{% endblock %}
{% block stylesheets %}


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

{% endblock %}
